<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm07.dao.StuDao">

	<select id="getStuBySid" resultType="com.ssm07.entity.Student" parameterType="int">
		select * from students where id=#{sid}
	</select>
	<update id="updatePic" parameterType="java.lang.String">
	    update students set touxiang=#{touxiang} where id=1
	</update>
	<update id="update" parameterType="com.ssm07.entity.Student">
	    update students set touxiang=#{pic},username=#{username} where id=#{id}
	</update>
</mapper>